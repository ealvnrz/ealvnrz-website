---
import { cn } from '@/lib/utils'

interface Props {
  href: string
  external?: boolean
  class?: string
  underline?: boolean
  [key: string]: any
}

const { href, external, class: className, underline, ...rest } = Astro.props
---

<a
  href={href}
  target={external ? '_blank' : '_self'}
  class={cn(
    'inline-block transition-colors duration-300 ease-in-out text-primary hover:text-primary/80',
    underline &&
      'underline decoration-primary/50 underline-offset-[3px] hover:decoration-primary',
    className,
  )}
  {...rest}
>
  <slot />
</a>
